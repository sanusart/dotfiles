[user]
	name = Sasha Khamkov
	email = sanusart@gmail.com
[core]
	autocrlf = input
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /home/sasha/.gitignore_global
[alias]
	abort = reset --hard HEAD
	snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
	lasttag = describe --tags --abbrev=0
	mylog = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	mydiff = diff --cached
    co = checkout
    go = checkout
    ls = status -sb
	amend = commit --amend
    pullall = submodule foreach --recursive git pull origin master
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive
    m = merge
    s = status
    p = pull
    c = commit -a
    sync = !git fetch && git rebase --merge

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = sanusart@gmail.com
	smtppass = **************
	smtpserverport = 587
[web]
	browser = chromium
[rerere]
	enabled = 1
	autoupdate = 1
[push]
	default = matching
[color]
	ui = 1
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
